<!DOCTYPE html>
<html>
  <head>
    <title>Move Time</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
      <h1 class="header">Move Time</h1>
      <div class="search_location_container">
        <h3>Where do you want to move?</h3>
        <%= form_tag :search_result, method: :get do %>
          <%= text_field_tag :location, nil, placeholder: "Enter the City, State" %>
          <%= submit_tag "Search", id: "submit_button" %>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
